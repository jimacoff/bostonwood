<% text = ['Radiator covers', 'Wall units', 'Beds, dressers and more', 'Dining tables and chairs', 'Bookcases', 'Cabinets, sideboards and buffets'] %>
<div class="row" id="homepage">
  <% @pictures.each_with_index do |image, index| %>
   <a href="/categories/1">
    <div class="homepage-image end" style="background:
      linear-gradient(
        rgba(0, 0, 0, 0.0),
        rgba(0, 0, 0, 0.0)
      ),
      url('./images/homepage/<%= image %>');
      background-size: cover;
      background-position: center;" >
      <h4 class="image-text"><%= text[index] %></h4>
    </div>
  </a>
  <% end %>
</div>
