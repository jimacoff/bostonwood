<%= form_for [@category, @product], html: { multipart: true } do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :blurb %>
    <%= f.text_field :blurb %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, style:"height: 150px;" %>
  </div>

  <div class="field">
    <%= f.label :build_material %>
    <%= f.text_field :build_material %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :order_num %>
    <%= f.select :order_num, options_for_select(0..@category.products.length) %>
  </div>
  <br />
  <div class="field">
    <%= f.submit 'Update Product' %>
  </div>
<% end %>
