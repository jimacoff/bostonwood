<%= form_for @category, html: { multipart: true } do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :blurb %>
    <%= f.text_field :blurb %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, style:"height: 150px;" %>
  </div>

  <br />
  <div class="field">
    <%= f.submit 'Update Category' %>
  </div>
<% end %>
