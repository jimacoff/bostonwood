<div class="row product-row">
  <% if @eg_products != [] %>
      <% @eg_products.each_with_index do |product, index| %>
        <a href="<%= @category.name %>/products/<%= product.id %>">
          <div class="category-product small-12 medium-3 columns">
            <div class="product-thumbnail">
              <img src="<%= product.image_url(:thumbnail) %>" />
            </div>
            <div class="row product-text">
              <b><%= product.builder.name%> <%= product.name %></b><br />
              <% if product.unfinished_prices != nil %>
              <% starting_at = product.unfinished_prices["0"].first %>
                Starting at: $<%= starting_at %>.99
              <% end %>
            </div>
          </div>
        </a>
      <% end %>
  <% end %>

  <% if @bk_products != [] %>
      <% @bk_products.each_with_index do |product, index| %>
        <% if product.name.split("-")[0] == "Design" %>
          <a href="<%= @category.name %>/products/<%= product.id %>">
            <div class="category-product dyo small-12 medium-3 columns">
              <div class="design-your-own">
                <b><%= product.name %> </b><br />
                <i class="fa fa-arrow-circle-right fa-2x icon" aria-hidden="true"></i>
              </div>
            </div>
          </a>
        <% else %>
          <a href="<%= @category.name %>/products/<%= product.id %>">
            <div class="category-product small-12 medium-3 columns">
              <div class="product-thumbnail">
                <img src="<%= product.image_url(:thumbnail) %>" />
              </div>
              <div class="row product-text">
                <b><%= product.builder.name.split(" ")[0]%> <%= product.name %></b><br />
                <% if product.unfinished_prices != nil %>
                <% starting_at = (product.unfinished_prices["0"].first.to_i * 3/4) + 1 %>
                <% if starting_at % 5 === 0 %>
                  <% starting_at -= 1 %>
                <% end %>
                  Starting at: $<%= starting_at %>.99
                <% end %>
              </div>
            </div>
          </a>
        <% end %>
      <% end %>
  <% end %>

  <% if @arch_products != [] %>
      <% @arch_products.each do |product| %>
      <a href="<%= @category.name %>/products/<%= product.id %>">
        <div class="category-product small-12 medium-3 columns">
          <div class="product-thumbnail">
            <img src="<%= product.image_url(:thumbnail) %>" />
          </div>
          <div class="row product-text">
            <b><%= product.builder.name.split(" ")[0]%> <%= product.name %></b><br />
            <% if product.unfinished_prices != nil %>
              <% starting_at = (product.unfinished_prices["0"].first.to_i * 3/4) %>
              <% if starting_at % 5 === 0 %>
                <% starting_at -= 1 %>
              <% end %>
              Starting at: $<%= starting_at %>.99
            <% end %>
          </div>
        </div>
      </a>
      <% end %>
  <% end %>

  <% if @penns_products != [] %>
      <% @penns_products.each do |product| %>
      <a href="<%= @category.name %>/products/<%= product.id %>">
        <div class="category-product small-12 medium-3 columns">
          <div class="product-thumbnail">
            <img src="<%= product.image_url(:thumbnail) %>" />
          </div>
          <div class="row product-text">
            <b><%= product.builder.name %> <%= product.name %></b><br />
            <% if product.unfinished_prices != nil %>
            <% starting_at = (product.unfinished_prices["0"].first.to_i) %>
              Starting at: $<%= starting_at %>.99
            <% end %>
          </div>
        </div>
      </a>
      <% end %>
  <% end %>
</div>

<% if current_admin != nil %>
  <%= link_to "add new product", new_category_product_path(@category) %><br />
  <%= link_to "edit category info", edit_category_path(@category) %><br />
  <span class="delete-link">
    <%= link_to "delete category", category_path(@category), {method: :delete} %>
  </span>
<% end %>
